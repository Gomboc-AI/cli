{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "bin",
    "esModuleInterop": true,
    "strict": true
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "babel.config.js",
    "test"
  ]
}
